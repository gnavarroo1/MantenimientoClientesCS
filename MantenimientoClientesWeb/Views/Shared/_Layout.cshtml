@{
    String strCodigo = String.Empty;
    if (Session["objUsuario"] != null)
    { strCodigo = ((MantenimientoClientesWeb.Bean.UsuarioBean)Session["objUsuario"]).correo; }
}


<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>@ViewBag.Title</title>
    <!-- Bootstrap Core CSS -->
    <link href="@Url.Content("~/Content/css/bootstrap.min.css")" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="@Url.Content("~/Content/css/sb-admin.css")" rel="stylesheet">
    <!-- Morris Charts CSS -->
    <link href="@Url.Content("~/Content/css/plugins/morris.css")" rel="stylesheet">
    <!-- Custom Fonts -->
    <link href="@Url.Content("~/Content/font-awesome/css/font-awesome.min.css")" rel="stylesheet" type="text/css">
</head>
<body class="fixed-nav sticky-footer bg-dark" id="page-top" style="">
    <div id="wrapper">
        <!-- Navigation -->

        <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top" id="mainNav" style="">
            <a class="navbar-brand" href="@Url.Action("LstCliente")">Mantenimiento Clientes</a>
            <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav navbar-sidenav" id="exampleAccordion">
                    <li class="nav-item" data-toggle="tooltip" data-placement="right" title="" data-original-title="Agregar Cliente">
                        <a  class="nav-link" href="@Url.Action("AddEditCliente")"><i class="fa fa-fw fa-user"></i> Agregar cliente</a>
                    </li>
                    <li class="nav-item" data-toggle="tooltip" data-placement="right" title="" data-original-title="Charts">
                        <a  class="nav-link" href="@Url.Action("LstCliente")"><i class="fa fa-fw fa-globe"></i>Clientes</a>
                    </li>

                </ul>
                <ul class="navbar-nav sidenav-toggler">
                    <li class="nav-item">
                        <a class="nav-link text-center" id="sidenavToggler">
                            <i class="fa fa-fw fa-angle-left"></i>
                        </a>
                    </li>
                </ul>
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <form name=CerrarSesion role="form" method="get" action="@Url.Action("CerrarSesion")">
                            <button type="button" onclick="confirmarCerrarSesion('¿Está seguro que desea cerrar sesión?')" class="btn btn-primary">
                                <i class="fa fa-fw fa-power-off"></i> Cerrar Sesión
                            </button>
                        </form>
                    </li>
                </ul>
            </div>
        </nav>
        <div class="content-wrapper">
            <div class="container-fluid">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a>@ViewBag.Title</a>
                    </li>
                </ol>
                @RenderBody()
            </div>
            <footer class="sticky-footer">
                <div class="container">
                    <div class="text-center">
                        <small>Copyright © Your Website 2017</small>
                    </div>
                </div>
            </footer>
            <!-- /.container-fluid -->
        </div>
        <!-- /#page-wrapper -->
    </div>
    <!-- /#wrapper -->
    <!-- jQuery -->
    <script src="@Url.Content("~/Content/js/jquery.js")"></script>
    <!-- Bootstrap Core JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js"></script>
    <script src="@Url.Content("~/Content/js/bootstrap.min.js")"></script>
    <script src="@Url.Content("~/Content/js/bootstrap.bundle.min.js")"></script>
    <script src="@Url.Content("~/Content/js/plugins/jquery-easing/jquery.easing.min.js")"></script>
    <script src="@Url.Content("~/Content/js/plugins/datatables/jquery.dataTables.js")"></script>
    <script src="@Url.Content("~/Content/js/plugins/datatables/dataTables.bootstrap4.js")"></script>
    <script src="@Url.Content("~/Content/js/sb-admin.min.js")"></script>
    <script src="@Url.Content("~/Content/js/sb-admin-datatables.min.js")"></script>
   

    <script>
    function confirmarCerrarSesion(message) {
        if (confirm(message)) {
            document.CerrarSesion.submit()
        }
    }
    function confirmarForm(message) {
        if (confirm(message)) {
            document.formulario.submit()
        }
    }
    function confirmRedirect(url,message) {
        if (confirm(message)) {
            document.location.href = url;
        }
    }

    
    </script>

</body>
</html>
